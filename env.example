PORT=5000

# Compose project name (controls container/network names). Change this if you run multiple instances.
COMPOSE_PROJECT_NAME=testerfy_prod

# Postgres
POSTGRES_DB=testerfy
POSTGRES_USER=testerfy
POSTGRES_PASSWORD=change_me

# Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=https://your-domain.example.com/api/auth/callback

# Session security
SESSION_SECRET=change_me_to_a_long_random_string

# Tailscale (optional)
TS_AUTHKEY=tskey-xxxxxxxxxxxxxxxxxxxx
