PORT=5000

# Compose project name (controls container/network names). Change this if you run multiple instances.
COMPOSE_PROJECT_NAME=testerfy_prod

# Postgres
POSTGRES_DB=testerfy
POSTGRES_USER=testerfy
POSTGRES_PASSWORD=change_me

# Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=https://your-domain.example.com/api/auth/callback

# Session security
# IMPORTANT (Docker Compose): avoid unescaped '$' characters here.
# - Best: use a hex string (no '$') e.g. from: `openssl rand -hex 32`
# - If your secret contains '$', escape it as '$$' to prevent compose warnings like:
#   The "XYZ" variable is not set. Defaulting to a blank string.
SESSION_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Tailscale (optional)
TS_AUTHKEY=tskey-xxxxxxxxxxxxxxxxxxxx

# --- Optional: Action Exporter (fail-safe / automation) ---
# Exports incremental `song_actions` to JSON files for Unraid User Scripts.
# This does NOT call Spotify — it only writes files from the DB.
ENABLE_ACTION_EXPORTER=false
EXPORT_INTERVAL_HOURS=3
EXPORT_DIR=/exports
EXPORT_MAX_ACTIONS=5000

# Optional: your “tester” playlist (e.g. Testercle) that an external script should clean up.
# The exporter includes this in the summary file.
TESTER_PLAYLIST_ID=
